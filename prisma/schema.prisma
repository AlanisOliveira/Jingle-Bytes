generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Events {
  id Int @id @default(autoincrement())
  name String 
  date DateTime 
  description String 

  categoryId Int 
  locationsId Int 

  category   Category @relation(fields: [categoryId], references: [id])
  location   Locations @relation(fields: [locationsId], references: [id])


  @@map("events")
}

model Category {
  id Int @id @default(autoincrement())
  name String 

  events Events[]

  @@map("categories")
}

model Locations {
  id Int @id @default(autoincrement())
  name String 
  address String

  events Events[]


  @@map("locations")
}